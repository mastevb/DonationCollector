<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Donation Collector Web Application</display-name>
  <listener>
  	<listener-class>external.IdleAWSConnectionListener</listener-class>
  </listener>  
  <servlet>
  	<servlet-name>PostItem</servlet-name>
  	<display-name>PostItem</display-name>
  	<description></description>
  	<servlet-class>rpc.PostItem</servlet-class>
  </servlet>
  
    <servlet>
        <servlet-name>MySchedule</servlet-name>
        <display-name>MySchedule</display-name>
        <description></description>
        <servlet-class>rpc.MySchedule</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>GetItem</servlet-name>
    	<display-name>GetItem</display-name>
    	<description></description>
    	<servlet-class>rpc.GetItem</servlet-class>
    </servlet>
    <servlet>
    	<servlet-name>SearchItem</servlet-name>
    	<display-name>SearchItem</display-name>
    	<description></description>
    	<servlet-class>rpc.SearchItem</servlet-class>
    </servlet>
    <servlet-mapping>
  	<servlet-name>PostItem</servlet-name>
  	<url-pattern>/donor/new_item</url-pattern>
  </servlet-mapping><servlet-mapping>
        <servlet-name>MySchedule</servlet-name>
        <url-pattern>/ngo/my_schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>GetItem</servlet-name>
    	<url-pattern>/donor/my_item</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
    	<servlet-name>SearchItem</servlet-name>
    	<url-pattern>/ngo/search_item</url-pattern>
    </servlet-mapping>

</web-app>